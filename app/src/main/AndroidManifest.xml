<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.express.pizza.pdq">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.OrderDetailActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"
                  android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".activity.AddressManagementActivity"
                android:launchMode="singleTop"
                android:screenOrientation="portrait"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name=".activity.OrderConfirmActivity"
                android:launchMode="singleTop"
                android:screenOrientation="portrait"
                android:theme="@style/OrderConfirmTheme">
        </activity>

        <meta-data
                android:name="com.baidu.lbsapi.API_KEY"
                android:value="sPGxfKGnAoGQuiUi02lA4fpnrresQ3Eg"/>

        <activity
                android:name=".activity.SplashActivity"
                android:screenOrientation="portrait"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.WelcomeActivity"
                android:screenOrientation="portrait"
                android:theme="@style/WelcomeTheme"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name=".activity.MainActivity"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.ItemDetailsActivity"
                android:launchMode="singleTop"
                android:screenOrientation="portrait"
                android:theme="@style/MainTheme">
        </activity>
    </application>

</manifest>