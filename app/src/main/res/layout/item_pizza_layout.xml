<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            app:cardElevation="1.5dp"
            android:id="@+id/itemCardView"
            android:stateListAnimator="@animator/pressed_and_activated_raise_up"
            android:clickable="true"
            android:focusable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/pizza_item_place_holder"
                    android:id="@+id/itemImg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="4:3"
                    android:contentDescription="Pizza展示图片"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:transitionName="transition_img"/>
            <TextView
                    android:text="夏威夷比萨"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemName"
                    app:layout_constraintTop_toBottomOf="@+id/itemImg"
                    android:textAppearance="@style/TextAppearance.Pizza.Name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"/>
            <TextView
                    android:text="水果"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemKind"
                    app:layout_constraintTop_toBottomOf="@+id/itemName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/listItemSecondary"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-condensed"/>
            <TextView
                    android:text="¥32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemPrice"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemKind"
                    android:textAppearance="@style/TextAppearance.Pizza.Price"
                    android:textColor="@color/listItemSecondary"
                    android:layout_marginTop="8dp"
            />
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_add_circle"
                    android:id="@+id/itemAdd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="8dp"
                    android:tint="@color/itemAdd"
                    android:adjustViewBounds="true"
            />
            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemCount"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/itemAdd"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/itemAdd"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_remove_circle_outline"
                    android:id="@+id/itemRemove"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="8dp"
                    android:tint="@color/itemAdd"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toStartOf="@+id/itemCount"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/itemPrice"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>