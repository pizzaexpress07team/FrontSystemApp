<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/welcome_background"
        tools:context=".activity.WelcomeActivity"
>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.2"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeLogo"
            android:contentDescription="PDQ品牌LOGO"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:srcCompat="@drawable/logo_welcome"
            android:adjustViewBounds="true"
            android:stateListAnimator="@null"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.11"/>
    <com.google.android.material.button.MaterialButton
            android:text="注册"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/signUpBtn"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            style="@style/Widget.MaterialComponents.Button"
            android:textAppearance="@style/TextAppearance.Button.Welcome"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
    />
    <com.google.android.material.button.MaterialButton
            android:text="登录"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/toSignInBtn"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.Button.Welcome"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/signUpBtn"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:strokeColor="@color/colorAccent"
    />
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            app:layout_constraintGuide_percent="0.57"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_qq"
            android:id="@+id/qqBtn"
            app:fabSize="normal"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/toSignInBtn"
            app:backgroundTint="@android:color/white"
            app:elevation="0dp"
            app:borderWidth="0dp"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/wbBtn"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="8dp"
            app:pressedTranslationZ="0dp"
            app:hoveredFocusedTranslationZ="0dp"
            app:maxImageSize="32dp"
            app:rippleColor="@color/iconRipple"
            android:tint="@color/colorAccent"
            android:alpha="0.8"
            android:focusable="true"
            android:contentDescription="用QQ账号登录"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_weibo"
            android:id="@+id/wbBtn"
            app:fabSize="normal"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/toSignInBtn"
            app:elevation="0dp"
            app:borderWidth="0dp"
            app:layout_constraintStart_toEndOf="@+id/qqBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp"
            app:maxImageSize="32dp"
            app:hoveredFocusedTranslationZ="0dp"
            app:pressedTranslationZ="0dp"
            app:backgroundTint="@android:color/white"
            app:rippleColor="@color/iconRipple"
            android:tint="@color/colorAccent"
            android:alpha="0.8"
            android:focusable="true"
            android:contentDescription="用微博账号登录"/>
    <com.google.android.material.button.MaterialButton
            android:text="跳过"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skipBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textAlignment="textEnd"
            android:textColor="@color/welcomeSubtitle"
            app:rippleColor="@color/transparent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>