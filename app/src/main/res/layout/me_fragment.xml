<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MeFragment"
        android:id="@+id/frameLayout2">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:text="帐号信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/listItemPrimary"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meNameArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="16dp">
                <ImageView
                        android:src="@drawable/ic_person"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:tint="@color/myAccent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="用户名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/listItemPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView5"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        android:layout_marginStart="32dp"/>
                <TextView
                        android:text="PDQ Pizza Express 用户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/meUserNameText"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5"
                        android:textStyle="bold"/>
                <TextView
                        android:text="可用于登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintStart_toStartOf="@+id/textView5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/mePhoneArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@+id/meNameArea"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="手机号码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/listItemPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        android:layout_marginStart="32dp"
                        android:id="@+id/textView6"/>
                <TextView
                        android:text="12345678900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mePhoneText"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/textView6"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_smartphone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:tint="@color/myAccent"/>
                <TextView
                        android:text="绑定中国大陆手机号码后可用于登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        android:textAlignment="textStart"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="56dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/mePhoneArea"
            />
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/view3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/meAddressArea"
                    android:layout_marginTop="16dp"
                    android:background="@color/listItemDivider"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meWeiboArea"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/mePhoneArea"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="微博帐号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/listItemPrimary"
                        tools:layout_conversion_absoluteHeight="24dp"
                        tools:layout_conversion_absoluteWidth="120dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                        android:layout_marginStart="32dp"
                        android:id="@+id/textView11"/>
                <TextView
                        android:text="未绑定"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/meWeiboText"
                        android:textAlignment="textEnd"
                        android:textSize="12sp"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="42dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/textView11"
                        android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_weibo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:tint="@color/myAccent"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <TextView
                        android:text="绑定后可使用微博帐号登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        app:layout_constraintTop_toBottomOf="@+id/textView11"
                        app:layout_constraintStart_toStartOf="@+id/textView11"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meQQArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/meWeiboArea"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="QQ帐号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/listItemPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"
                        android:layout_marginStart="32dp"
                        android:id="@+id/textView13"/>
                <TextView
                        android:text="未绑定"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/meQQText"
                        android:textAlignment="textEnd"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/textView13"
                        android:textStyle="bold"/>
                <ImageView
                        android:src="@drawable/ic_qq"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:tint="@color/myAccent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="绑定后可使用QQ帐号登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="@+id/textView13"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meAddressArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/meQQArea"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="收餐地址管理"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="32dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:drawableTint="@color/myAccent"
                        android:textColor="@color/listItemPrimary"
                />
            </LinearLayout>
            <TextView
                    android:text="帐号管理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/listItemPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/meAddressArea"
                    android:layout_marginTop="32dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meLogOutArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="登出"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_account_off"
                        android:drawablePadding="32dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:drawableTint="@color/myAccent"
                        android:textColor="@color/listItemPrimary"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/meExitArea"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/meLogOutArea"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground">
                <TextView
                        android:text="关闭"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_exit_to_app"
                        android:drawablePadding="32dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:drawableTint="@color/myAccent"
                        android:textColor="@color/listItemPrimary"
                />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
            android:layout_height="48dp"
            android:layout_width="match_parent"
            app:title="Pizza Express"
            style="@style/Toolbar"
            app:logo="@drawable/logo_toolbar"
            app:titleMarginStart="26dp"
            app:layout_scrollFlags="scroll|snap"
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>