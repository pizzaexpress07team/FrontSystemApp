<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.OrderFragment"
        android:id="@+id/frameLayout">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:id="@+id/orderSwipeRefresh">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/orderRecyclerView"
                tools:listitem="@layout/item_order_layout"
                tools:itemCount="5"
                android:clipChildren="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.appcompat.widget.Toolbar
            android:layout_height="48dp"
            android:layout_width="match_parent"
            app:title="@string/title_toolbar_main"
            style="@style/Toolbar"
            app:logo="@drawable/ic_food_pizza"
            app:titleMarginStart="24dp"
            app:layout_scrollFlags="scroll|snap"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/toolbar2"/>
    <ImageView
            android:src="@drawable/vector_empty_order"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderEmptyImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:adjustViewBounds="true"
            app:layout_constraintVertical_bias="0.37"
            tools:visibility="gone"/>
    <TextView
            android:text="您暂时没有订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderEmptyText"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/orderEmptyImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>