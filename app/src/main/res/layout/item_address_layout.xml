<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:foreground="?attr/selectableItemBackground"
>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_location"
            android:id="@+id/imageView10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:tint="@color/listItemSecondary"
            android:tintMode="src_in"/>
    <TextView
            android:text="华东师范大学（中山北路校区）-第五宿舍"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrDetail"
            android:textColor="@color/listItemPrimary"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            android:textStyle="bold"
            android:textSize="16sp"/>
    <TextView
            android:text="427A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrNote"
            app:layout_constraintTop_toBottomOf="@+id/addrDetail"
            app:layout_constraintStart_toStartOf="@+id/addrDetail"
            android:layout_marginTop="4dp"
            android:textColor="@color/listItemPrimary"
            android:visibility="visible"
            android:textSize="16sp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_person"
            android:id="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/addrNote"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:tint="@color/listItemSecondary"
            android:tintMode="src_in"/>
    <TextView
            android:text="曾凎"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrName"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            android:layout_marginStart="16dp"
            android:textColor="@color/listItemSecondary"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_phone"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            android:tint="@color/listItemSecondary"
            android:tintMode="src_in"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="15317786280"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrPhone"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            android:layout_marginStart="16dp"
            android:textColor="@color/listItemSecondary"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            android:fontFamily="sans-serif"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/listItemDivider"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>