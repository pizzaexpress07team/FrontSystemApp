<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OrderDetailActivity"
>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbarOrderDetail"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="74dp"
            app:layout_constraintVertical_bias="1.0">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <View
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:id="@+id/mapStub"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/order_cart_background"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_waimai"
                    android:id="@+id/imageView14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/mapStub"
                    android:layout_marginStart="16dp"
                    android:tint="@color/colorAccent"
                    android:layout_marginTop="32dp"/>
            <TextView
                    android:text="订单配送中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderStateText"
                    app:layout_constraintTop_toTopOf="@+id/imageView14"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toEndOf="@+id/imageView14"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_refresh"
                    android:id="@+id/orderRefreshBtn"
                    android:tint="@color/toolbarMenuIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/cardView2"
                    app:cardElevation="2dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView14">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:id="@+id/view3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@color/listItemDivider"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView23"
                            android:layout_marginTop="16dp"
                    />
                    <TextView
                            android:text="订单配送至"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/listItemSecondary"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:text="18801234567"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/orderPhone"
                            app:layout_constraintTop_toBottomOf="@+id/orderAddress"
                            android:textColor="@color/listItemSecondary"
                            app:layout_constraintStart_toEndOf="@+id/orderName"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"/>
                    <TextView
                            android:text="曾凎"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/orderName"
                            app:layout_constraintTop_toBottomOf="@+id/orderAddress"
                            android:textColor="@color/listItemSecondary"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="16dp"/>
                    <TextView
                            android:text="华东师范大学（中山北路校区）-第五宿舍 427A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/orderAddress"
                            app:layout_constraintTop_toBottomOf="@+id/view3"
                            android:textSize="16sp"
                            android:textColor="@color/listItemPrimary"
                            android:layout_marginStart="16dp"
                            android:textAlignment="textEnd"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/cardView3"
                    app:cardElevation="2dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/orderFoodRecyclerView"
                            tools:listitem="@layout/item_order_food_layout"
                            tools:itemCount="3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="8dp"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:id="@+id/view4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@color/listItemDivider"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/orderFoodRecyclerView"
                            android:layout_marginTop="8dp"/>
                    <TextView
                            android:text="已付款"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView27"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/view4"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/listItemPrimary"
                            android:textSize="16sp"/>
                    <TextView
                            android:text="¥78.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/orderPrice"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/view4"
                            android:layout_marginTop="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/listItemPrimary"
                            android:textSize="18sp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="下单时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/listItemSecondary"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3"
                    android:text="2019.04.09 20:30:51"
                    android:textColor="@color/listItemSecondary"/>
            <TextView
                    android:text="支付时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView29"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/listItemSecondary"/>
            <TextView
                    android:text="2019.04.09 20:31:05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderPayTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/orderTime"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/listItemSecondary"/>
            <TextView
                    android:text="订单ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView31"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/listItemSecondary"
            />
            <TextView
                    android:text="164d3cb358b54cceb789b7297dda9afa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderID"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/textView33"
                    app:layout_constraintBottom_toBottomOf="@+id/textView33"
                    android:textColor="@color/listItemSecondary"/>
            <com.google.android.material.button.MaterialButton
                    android:text="订单支付"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderPayBtn"
                    app:layout_constraintTop_toBottomOf="@+id/textView33"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    style="@style/Button.UnelevatedButton"
                    app:layout_constraintVertical_bias="0.0"
                    android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.Toolbar
            android:layout_height="48dp"
            android:layout_width="match_parent"
            app:title="订单详情"
            style="@style/Toolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/toolbarOrderDetail"/>
</androidx.constraintlayout.widget.ConstraintLayout>