<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ItemDetailsActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_height="48dp"
            android:layout_width="match_parent"
            app:title="餐品详情"
            style="@style/Toolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/toolbarDetails"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarDetails"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pizza_item_place_holder"
                    android:id="@+id/itemImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:adjustViewBounds="true"
                    android:transitionName="transition_img"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Pizza name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemName"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/itemImg"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textAppearance="@style/TextAppearance.Pizza.Name"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/itemPrice"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="6 英寸"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemSize"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/itemName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
            />
            <TextView
                    android:text="¥30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemPrice"
                    app:layout_constraintTop_toBottomOf="@+id/itemImg"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:textAppearance="@style/TextAppearance.Pizza.Price"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:text="原料：面粉、鸡肉、芝士、火腿"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemResource"
                    app:layout_constraintTop_toBottomOf="@+id/itemSize"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/listItemSecondary"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>